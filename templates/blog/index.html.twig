{% extends 'base.html.twig' %}

{% block title %}Listes des articles{% endblock %}

{% block body %}


<h1>  {{title}}  </h1>

<div class="album py-5 bg-light">
    

      <div class="row">

        {% for data in articles %}

        

        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <img src="{{ data.image }}">
     

            <div class="card-body">

              <h4> {{ data.title }}</h4><hr>


              <p class="card-text">{{ data.content|striptags }}</p>

              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="{{ path('blog_show', {'id': data.id }) }}" class="btn btn-sm btn-outline-secondary">lire la suite</a>
                  <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                </div>
                <small class="text-muted">Posté le{{ data.createdAt|date('d/m/Y') }} à {{data.createdAt|date('H:i:s') }}</small>
              </div>
            </div>
          </div>
       
        
      </div>

      {% endfor %}
    
  </div>

{% endblock %}
